{
    "name": "camillemaurice/wordpress",
    "description": "wordpress testing",
    "type": "project",
    "require": {
    },
    "authors": [
        {
            "name": "freeonisland",
            "email": "freeonisland@yahoo.fr"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^4.6",
        "phpunit/phpunit-skeleton-generator": "*",
        "squizlabs/php_codesniffer": "^3.0@dev",
        "phpmd/phpmd": "dev-master"
    },
    "autoload": {
        "psr-4": { 
            "Application\\":"application/"
        }
    },
    "script": {
        "php": [
            "@phpunit",
            "@phpcs",
            "@phpmd"
        ],
        "phpunit": "phpunit -c ./config/phpunit.xml",
        "phpcs": "phpcs ./application --ignore=./application/log/* --report=xml --report-file=./var/logphpcs.xml",
        "phpmd": "phpmd ./application xml ./config/phpmd.xml --reportfile ./var/logphpmd.xml"
    }
}
