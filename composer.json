{
    "name": "camillemaurice/wordpress",
    "description": "wordpress testing",
    "type": "project",
    "require": {
    },
    "authors": [
        {
            "name": "freeonisland",
            "email": "freeonisland@yahoo.fr"
        }
    ],
    "config":{
        "sort-package":true	
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "anahkiasen/html-object":"^1.4",
	"anahkiasen/underscore-php":"2",
	"league/plates":"^3.3",
	"propel/propel":"~2.0@dev"
    },
    "require-dev": {
        "kint-php/kint": "^3.1",
        "phpmd/phpmd": "^2",
        "phpunit/phpunit": "^4.6",
        "phpunit/phpunit-skeleton-generator": "*",
        "squizlabs/php_codesniffer": "^3.0",
        "monolog/monolog": "latest",
	"wp-coding-standards/wpcs": "^2.0"
    },
    "extra":{
        "behat/behat":"^3.5",
        "codeception/codeception":"^3.1",
        "fzaninotto/faker":"^1.8"
    },
    "autoload": {
        "psr-4": { 
            "App\\":"app/"
        }
    },
    "scripts": {
        "phpcs_e": "phpcs --config-set ignore_errors_on_exit 1",
        "phpcs_w": "phpcs --config-set ignore_warnings_on_exit 1",
	"phpcs_c": "phpcs --config-set colors 1",
        "phpcs_i": "phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs",
        
        "phpcs":   "phpcs --standard=wordpress wp-content/plugins/myplug",
        "phpcs-u": "phpcs --standard=wordpress wp-content/mu-plugins",
        "phpmd":   "phpmd wp-content/plugins/myplug text cleancode,codesize,controversial,design,naming,unusedcode --ignore-violations-on-exit",
        "phpmd-u": "phpmd wp-content/mu-plugins text cleancode,codesize,controversial,design,naming,unusedcode --ignore-violations-on-exit",
        "phpunit": "bash config/phpunit.sh",
        
        "test": ["@phpcs", "@phpcs-u", "@phpmd", "@phpmd-u"]
    },
    "scripts-descriptions": {
        "phpcs-file": "phpcs app --report=junit --report-file=var/php_reports/phpcs_report.xml",
        "phpmd-file": "phpmd app xml cleancode,codesize,controversial,design,naming,unusedcode --reportfile var/php_reports/phpmd_report.xml --ignore-violations-on-exit",        
	"phpunit-bash": "phpunit tests --bootstrap vendor/autoload.php --log-junit var/php_reports/phpunit_report.xml"
    }
}
